<%= form_for @work do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :medium %>
  <%= f.text_field :medium %>

  <%= f.label :style %>
  <%= f.text_field :style %>

  <%= f.label :image %>
  <%= f.url_field :image %>
<hr>
  <%= f.label :artist_id %>
  <%= f.select :artist_id, Artist.all.map { |artist| [artist.name, artist.id] }, :include_blank => true %>  

  <%= f.submit %>
<% end %>